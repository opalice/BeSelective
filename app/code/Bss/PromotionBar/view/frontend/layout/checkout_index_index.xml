<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block class="Bss\PromotionBar\Block\PromotionBar" name="promotionbar_checkout_page_top" as="promotionbar_checkout_page_top" before="-" template="Bss_PromotionBar::block.phtml" ifconfig="promotion_bar/general/enable"/>
            <referenceBlock name="promotionbar_default_page_top" remove="true"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Bss\PromotionBar\Block\PromotionBar" name="promotionbar_checkout_content_top" as="promotionbar_product_content_top" before="product.info.main" template="Bss_PromotionBar::template.phtml"  ifconfig="promotion_bar/general/enable"/>
            <referenceBlock name="promotionbar_default_content_top" remove="true"/>
        </referenceContainer>
        <referenceContainer name="page.bottom">
            <block class="Bss\PromotionBar\Block\PromotionBar" name="promotionbar_checkout_page_bottom" as="promotionbar_product_content_sidebar_bottom" template="Bss_PromotionBar::template.phtml" after="-"  ifconfig="promotion_bar/general/enable"/>
            <referenceBlock name="promotionbar_default_page_bottom" remove="true"/>
        </referenceContainer>
    </body>
</page>